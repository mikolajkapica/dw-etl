# Environment variables for Himalayan Expeditions ETL
# Copy this file to .env and update with your actual values

# Database Configuration
DB_SERVER=localhost
DB_NAME=HimalayanExpeditionsDW
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_DRIVER=ODBC Driver 17 for SQL Server

# Data Sources
DATA_SOURCE_PATH=data/
WDI_DATA_PATH=data/wdi.csv

# ETL Configuration
BATCH_SIZE=1000
MAX_RETRY_ATTEMPTS=3
LOG_LEVEL=INFO

# World Bank API (if using direct API access)
WORLD_BANK_API_BASE_URL=https://api.worldbank.org/v2/

# Dagster Configuration
DAGSTER_HOME=.dagster_home
DAGSTER_HOST=0.0.0.0
DAGSTER_PORT=3000
